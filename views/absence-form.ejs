<%- include('partials/header', { title: 'Mark Absence' }) %>

<main class="form-page">
  <h1 class="page-title">Mark Faculty Absence</h1>

  <form class="styled-form" method="POST" action="/mark-absence">
    <div class="form-group">
      <label for="facultyId">Faculty ID</label>
      <input type="text" id="facultyId" name="facultyId" required>
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      <input type="date" id="date" name="date" required>
    </div>

    <div class="form-group">
      <label for="slotId">Slot ID</label>
      <input type="text" id="slotId" name="slotId" required>
    </div>

    <button type="submit" class="btn-primary">Mark Absence</button>
  </form>

  <% if (message) { %>
    <p class="form-message"><%= message %></p>
  <% } %>
</main>

<%- include('partials/footer') %>